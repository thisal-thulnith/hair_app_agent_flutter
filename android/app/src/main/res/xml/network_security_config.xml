<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration: Trust system certificates for HTTPS -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Allow cleartext (HTTP) traffic for local development only -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Android emulator localhost -->
        <domain includeSubdomains="true">localhost</domain>
        <!-- Android emulator host machine access -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Local network IPs for physical devices -->
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">192.168.1.0</domain>
        <domain includeSubdomains="true">192.168.2.0</domain>
        <domain includeSubdomains="true">192.168.3.0</domain>
        <domain includeSubdomains="true">10.0.0.0</domain>
    </domain-config>

    <!-- ngrok and other HTTPS services work automatically with base-config -->
    <!-- No special configuration needed for HTTPS URLs -->
</network-security-config>
